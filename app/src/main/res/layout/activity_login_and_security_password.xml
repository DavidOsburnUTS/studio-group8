<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#3F6CF4">


        <Button
            android:id="@+id/transaction_back_button"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/ic_keyboard_arrow_left_24px"
            android:onClick="back"/>

        <TextView
            android:id="@+id/label_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:padding="27dp"
            android:text="ACCOUNT"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayout"
        android:background="#C3E4ECEC"
        android:backgroundTintMode="add"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_lock_24px"
            android:drawablePadding="15dp"
            android:padding="12dp"
            android:paddingStart="31dp"
            android:paddingEnd="31dp"
            android:text="LOGIN &amp; SECURITY               PASSWORD"
            android:textAlignment="textStart"
            android:textColor="#828282"
            android:textSize="14sp"
            android:textStyle="bold">

        </Button>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="196dp"
            android:translationZ="100dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_grey_left_24px" />

        <Button
            android:id="@+id/button2"
            android:layout_width="275dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="69dp"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="58dp"
            android:background="@drawable/bluebutt"
            android:text="UPDATE"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_current_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="70dp"
            android:text="Current password: "
            android:textColor="#828282"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="170dp"
            android:text="New password:"
            android:textColor="#828282"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_reenter_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="270dp"
            android:text="Reenter new password:"
            android:textColor="#828282"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/current_password"
            android:layout_width="386dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="477dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="386dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="377dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/reenter_new_password"
            android:layout_width="386dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="276dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName" />

    </RelativeLayout>

</RelativeLayout>