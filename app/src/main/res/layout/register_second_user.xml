<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">




    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/raleway_semibold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="SignUp"
        android:textColor="@color/fontColor"
        android:textSize="40dp"
        android:textStyle="bold"
        android:paddingHorizontal="90dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/ic_keyboard_arrow_left_24px"
        android:onClick="back">
    </ImageView>





    <EditText
        android:id="@+id/username"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/fontColor"
        android:drawableStart="@drawable/ic_email_24px"
        android:gravity="center"
        android:paddingStart="25dp"
        android:hint="Email Address"
        android:textAlignment="center"
        android:textColorHint="@color/fontColor" />

    <EditText
        android:id="@+id/password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fontColor"
        android:hint="First Name"
        android:layout_marginTop="167dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textColorHint="@color/fontColor"
        android:drawableStart="@drawable/ic_account_box_24px"
        android:paddingStart="25dp"/>


    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fontColor"
        android:hint="Username"
        android:layout_marginTop="229dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textColorHint="@color/fontColor"
        android:drawableStart="@drawable/ic_person_outline_24px"
        android:paddingStart="25dp"/>


    <EditText
        android:id="@+id/passwordreg"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fontColor"
        android:hint="Password"
        android:layout_marginTop="291dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textColorHint="@color/fontColor"
        android:drawableStart="@drawable/ic_lock_outline_24px"
        android:paddingStart="25dp"/>


    <EditText
        android:id="@+id/confirmpass"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fontColor"
        android:hint="Confirm Password"
        android:layout_marginTop="354dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textColorHint="@color/fontColor"
        android:paddingStart="25dp"/>

    <ImageView
        android:id="@+id/businessman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:background="@drawable/user_pic" />






</RelativeLayout>