<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signupbtn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#3F6CF4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/ic_keyboard_arrow_left_24px"
                android:gravity="center"
                android:onClick="back"
                android:padding="23dp"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="40dp">

            </TextView>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F8F8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="40dp"
                android:background="@drawable/ic_add_icon"
                android:onClick="getImage"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="58dp">

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:backgroundTint="#828282"
                android:gravity="center"

                android:hint="Profile Name"
                android:scrollHorizontally="true"
                android:textColorHint="#828282" />

            <Button
                android:id="@+id/update"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginVertical="50dp"
                android:background="@drawable/ic_close1_24px"

                ></Button>



        </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="275dp"
                android:layout_height="65dp"
                android:layout_marginStart="74dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bluebutt"
                android:text="UPDATE"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>



    </LinearLayout>
</LinearLayout>