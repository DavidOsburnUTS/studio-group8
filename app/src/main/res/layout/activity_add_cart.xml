<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:background="@drawable/bubble" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Home page"
                android:textColor="@color/fontColor"
                android:textSize="40dp" />






            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/raleway_semibold"
        android:textStyle="bold"
        android:text="Your device cart"
        android:textColor="#2B2B2B"
        android:textSize="29dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="350dp"
        android:id="@+id/recyclercartlist"
        android:layout_centerHorizontal="true"
        android:layout_height="600dp"
        android:layout_marginTop="200dp"
        android:scrollbars="vertical"
        android:paddingBottom="30dp"
        android:layout_marginBottom="40dp">
    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/line"
        android:layout_width="310dp"
        android:layout_height="3dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/recyclercartlist"
        android:layout_centerHorizontal="true"
        android:background="#707070"
        android:gravity="center" />


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:id="@+id/orderTotal"
                android:text="Order total"
                android:layout_below="@+id/line"
                android:layout_marginLeft="60dp"
                android:textColor="#52A5FF"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="15.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginLeft="275dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="AU $2000.00"
                android:textColor="#2B2B2B"
                android:textSize="15.5dp" />


            <Button
                android:layout_width="275dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/orderTotal"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:background="#4AB0FF"
                android:text="PROCEED TO CHECKOUT"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:onClick="checkout"
                />




        </RelativeLayout>




    </ScrollView>


    </RelativeLayout>