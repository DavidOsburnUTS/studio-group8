<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/card_list_click"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/admin_acc_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/person_four" />

    <TextView
        android:id="@+id/admin_acc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@id/admin_acc_image"
        android:text="Name"
        android:textColor="@color/bb_tabletRightBorderDark" />

    <TextView
        android:id="@+id/admin_acc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="41dp"
        android:text="Account Type: Buyer/Seller"
        android:textColor="@color/bb_tabletRightBorderDark" />

    <TextView
        android:id="@+id/admin_acc_email"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@id/admin_acc_image"
        android:text="Email"
        android:textColor="@color/bb_tabletRightBorderDark" />



</RelativeLayout>