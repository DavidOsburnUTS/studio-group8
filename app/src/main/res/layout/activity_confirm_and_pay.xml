<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8">

    <ImageView
        android:layout_width="430dp"
        android:layout_height="120dp"
        android:layout_marginLeft="-10dp"
        android:background="@drawable/cartbubble" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-100dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Payment Complete"
        android:textColor="@color/fontColor"
        android:textSize="40dp"
        android:gravity="center" />

    <ImageView
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/checkrec" />

    <Button
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="69dp"
        android:background="@drawable/upload_btn"
        android:text="HOME PAGE"
        android:textAlignment="center"
        android:textSize="18.5dp"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="#FFFFFF"
        android:onClick="home_page"
        android:gravity="center"
        android:drawableStart="@drawable/home"
        android:paddingStart="20dp"/>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="-500dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/toptab" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="57dp"
        android:background="@drawable/thankyou" />

    <ImageView
    android:layout_width="225dp"
    android:layout_height="225dp"
    android:layout_marginTop="-320dp"
    android:layout_marginLeft="92dp"
    android:background="@drawable/circle" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="-170dp"
        android:layout_marginLeft="145dp"
        android:background="@drawable/tick" />



</LinearLayout>