            <TextView
                android:layout_width="375dp"
                android:layout_height="125dp"
                android:background="@drawable/desc_bg"
                android:padding="5dp"
                android:id="@+id/prod_desc"
                android:layout_centerHorizontal="true"
                android:text="hello sick mad alskdkljaslkdjslkdkljalksjlkdsjsklajjdkladjslkjsdakljadskladjskladsjkladsjkljadskljadjdkl"
                android:maxLines="5"
                android:textStyle="normal"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="425dp">
            </TextView>


            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="560dp"
        android:text="Quantity"
        android:textStyle="bold"
        android:textColor="#85000000"
        android:textSize="30dp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="610dp"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="decrement"
            android:textSize="20dp"
            android:background="@drawable/add_minus_btn_bg"
            android:textColor="@color/white"
            android:text="-" />

        <EditText
            android:id="@+id/quantity_edit_text"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/login_rec"
            android:layout_marginLeft="8dp"
            android:editable="false"
            android:focusable="false"
            android:layout_marginRight="8dp"
            android:text="1"
            android:inputType="number"
            android:textColor="#000000" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add_minus_btn_bg"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:onClick="increment"
            android:text="+" />

    </LinearLayout>

    <Button
        android:id="@+id/addtoCart"
        android:layout_width="280dp"
        android:text="Add to cart"
        android:textColor="@color/fontColor"
        android:textStyle="bold"
        android:textSize="20dp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="670dp"
        android:background="@drawable/upload_btn"
        android:layout_height="wrap_content"
        />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>