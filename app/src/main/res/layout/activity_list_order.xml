<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/order_image"
        android:ems="10"
        android:inputType="date"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/order_image"

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/nintendo" />

    <TextView
        android:id="@+id/textView_order_productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/order_image"
        android:fontFamily="@font/raleway_semibold"
        android:text="Nintendo Switch"
        android:textColor="#555555"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView_order_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_order_productname"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_toEndOf="@+id/product_image"
        android:fontFamily="@font/raleway_semibold"
        android:text="Quantity:"
        android:textColor="@color/bb_inActiveBottomBarItemColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_order_productname"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/textView_order_quantity_label"
        android:text="4"
        android:textColor="@color/bb_inActiveBottomBarItemColor" />

    <TextView
        android:id="@+id/textView_order_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_order_quantity_label"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_toEndOf="@+id/product_image"
        android:fontFamily="@font/raleway_semibold"
        android:text="Order ID: "
        android:textColor="@color/bb_inActiveBottomBarItemColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_order_quantity_label"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/textView_order_quantity_label"
        android:text="123456789" />

    <TextView
        android:id="@+id/textview_order_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_order_id_label"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:text="ORDER TOTAL"
        android:textColor="@color/bb_tabletRightBorderDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_order_total"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:text="$4000.00"
        android:textColor="#8BC34A" />

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_order_id_label"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/textview_order_total"
        android:text="STATUS"
        android:textColor="@color/bb_tabletRightBorderDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_delivered_cancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_status"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/textView_order_price"
        android:paddingBottom="10dp"
        android:text="Delivered"
        android:textColor="@color/bb_tabletRightBorderDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/order_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:text="Sep 05, 2019"
        android:textColor="@color/bb_tabletRightBorderDark" />

</RelativeLayout>