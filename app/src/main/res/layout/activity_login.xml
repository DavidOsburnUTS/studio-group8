<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.studio_group8.LoginActivity">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/onevice"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/isometricphone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/fontColor"
                    android:drawableStart="@drawable/ic_person_outline_24px"
                    android:gravity="center"
                    android:hint="UserName"
                    android:paddingStart="25dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/fontColor" />

            </RelativeLayout>

            <RelativeLayout
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/fontColor"
                    android:hint="Password"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColorHint="@color/fontColor"
                    android:drawableStart="@drawable/ic_lock_outline_24px"
                    android:paddingStart="25dp"/>




            </RelativeLayout>

            <RelativeLayout
                android:paddingTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <Button
                android:layout_width="280dp"
                android:text="Login"
                android:textColor="@color/fontColor"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/login_btn"
                android:clickable="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:paddingTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="280dp"
                    android:text="Register"
                    android:textColor="@color/fontColor"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/register_btn"
                    android:clickable="true"/>


            </RelativeLayout>


            <RelativeLayout
                android:paddingTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:text="Reset Password"
                    android:textColor="@color/fontColor"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:clickable="true"/>


            </RelativeLayout>






