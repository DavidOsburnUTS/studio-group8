            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="OneVice" >
        </activity>
        <activity
        android:name=".RegisterBuyerActivity"
        android:label="OneVice" >
    </activity>
        <activity
            android:name=".RegisterSellerActivity"
            android:label="OneVice" >
